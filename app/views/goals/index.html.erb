<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Goals</h4>
        <h6 class="card-subtitle"></h6>
        <%= link_to 'New Automated Task', new_goal_path, class: "btn btn-primary btn-rounded m-t-10 float-right" %>

        <div class="table-responsive">
          <table id="demo-foo-addrow" class="table table-bordered m-t-30 table-hover contact-list table-bordered toggle-arrow-tiny" data-paging="true" data-paging-size="7" data-toggle-column="first">
            <thead>
              <tr>
                <th>Heading</th>
      <th>Plan</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Number of milestones</th>
      <th>Tag</th>
      <th>Status</th>
      <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @goals.each do |goal| %>
                <tr>
                  <td><%= goal.heading %></td>
        <td><%= goal.plan %></td>
        <td><%= goal.start_date %></td>
        <td><%= goal.end_date %></td>
        <td><%= goal.number_of_milestones %></td>
        <td><%= goal.tag %></td>
        <td><%= goal.status %></td>
                  <td>
                    <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_goal_path(goal), class: "btn btn-info btn-circle" %> 
                    <%= link_to '<i class="fa fa-trash"></i>'.html_safe, goal, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-circle" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</div>



