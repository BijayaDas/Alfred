<%= form_with(model: goal, local: true, class: "m-t-40") do |form| %>
  <% if goal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(goal.errors.count, "error") %> prohibited this goal from being saved:</h2>

      <ul>
      <% goal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
          <div class="form-control-feedback"><small>Add <code>required</code> attribute to field for required validation.</small></div>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <h5>Heading<span class="text-danger">*</span></h5>
    <div class="controls">
      <%= form.text_field :heading, class: "form-control", required: "true", "data-validation-required-message" => "This field is required" %>
    </div>
  </div>

<div class="form-group">
  <h5>Plan
    <span class="text-danger">*</span></h5>
  <div class="controls">
    <%= form.text_field :plan, class: "form-control", required: "true", "data-validation-required-message" => "This field is required" %>
  </div>
</div>

<div class="form-group">
    <h5>Enter Start Date <span class="text-danger">*</span></h5>
    <div class="controls">
      <%= form.datetime_select :start_date, class: "form-control", placeholder: "MM/DD/YYYY:HH:MM:SS", 
        "data-validation-regex-regex"=>"([a-z0-9_\.-]+)@([\da-z\.-]+)\.([a-z\.]{2,6})", "data-validation-regex-message"=>"Enter Valid Date" %>
</div>

<div class="form-group">
    <h5>Enter End Date <span class="text-danger">*</span></h5>
    <div class="controls">
      <%= form.datetime_select :end_date, class: "form-control", placeholder: "MM/DD/YYYY", 
        "data-validation-regex-regex"=>"([a-z0-9_\.-]+)@([\da-z\.-]+)\.([a-z\.]{2,6})", "data-validation-regex-message"=>"Enter Valid Date" %>
</div>

<div class="form-group">
  <h5>Number Of Milestones<span class="text-danger">*</span></h5>
  <div class="controls">
    <%= form.text_field :number_of_milestones, class: "form-control", required: "true", "data-validation-required-message" => "This field is required" %>
  </div>
</div>

<div class="form-group">
  <h5>Tag<span class="text-danger">*</span></h5>
  <div class="controls">
    <%= form.select :tag, options_for_select(Goal.tags.keys.to_a, class: 'form-control'), {}, {class: "form-control"} %>
  </div>
</div>

<div class="form-group">
    <h5>Status <span class="text-danger">*</span></h5>
    <div class="controls">
        <%= form.select :status, options_for_select(Goal.statuses.keys.to_a, class: 'form-control'), {}, {class: "form-control"} %>
    </div>
</div>

   <div class="text-xs-right">
    <%= form.button 'submit', class: "btn btn-info" %>
    <%= link_to 'Cancel', goals_path, class: "btn btn-inverse", style: "a" %>
  </div>
<% end %>

