
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Onelogin list</h4>
        <h6 class="card-subtitle"></h6>
        <%= link_to 'New Onelogin', new_onelogin_path, class: "btn btn-primary btn-rounded m-t-10 float-right" %>

        <div class="table-responsive">
          <table id="demo-foo-addrow" class="table table-bordered m-t-30 table-hover contact-list table-bordered toggle-arrow-tiny" data-paging="true" data-paging-size="7" data-toggle-column="first">
            <thead>
              <tr>
                <th>Application name</th>
                <th data-breakpoints="xs sm">Url</th>
                <th>Username</th>
                <th>Password</th>
                <th data-breakpoints="xs sm">Status</th>
                <th data-breakpoints="all" data-title=Info>Additional info</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @onelogins.each do |onelogin| %>
                <tr>
                  <td><a href="javascript:void(0)"><%= onelogin.application_name %></a></td>
                  <td><%= onelogin.url %></td>
                  <td><%= onelogin.username %></td>
                  <td><%= onelogin.password %></td>
                  <td><span class="label label-danger"><%= onelogin.status %></span></td>
                  <td><%= onelogin.additional_info %></td>
                  <td>
                    <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_onelogin_path(onelogin), class: "btn btn-info btn-circle" %> 
                    <%= link_to '<i class="fa fa-trash"></i>'.html_safe, onelogin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-circle" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</div>
