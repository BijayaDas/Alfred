
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Automated Tasks list</h4>
        <h6 class="card-subtitle"></h6>
        <%= link_to 'New Automated Task', new_automated_task_path, class: "btn btn-primary btn-rounded m-t-10 float-right" %>

        <div class="table-responsive">
          <table id="demo-foo-addrow" class="table table-bordered m-t-30 table-hover contact-list table-bordered toggle-arrow-tiny" data-paging="true" data-paging-size="7" data-toggle-column="first">
            <thead>
              <tr>
                      <th>Task name</th>
      <th>Task type</th>
      <th>Scheduled date</th>
      <th>Status</th>
      <th>Frequency</th>
      <th>Attempts</th>
      <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @automated_tasks.each do |automated_task| %>
                <tr>
                          <td><%= automated_task.task_name %></td>
        <td><%= automated_task.task_type %></td>
        <td><%= automated_task.scheduled_date %></td>
        <td><%= automated_task.status %></td>
        <td><%= automated_task.frequency %></td>
        <td><%= automated_task.attempts %></td>
                  <td>
                    <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_automated_task_path(automated_task), class: "btn btn-info btn-circle" %> 
                    <%= link_to '<i class="fa fa-trash"></i>'.html_safe, automated_task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-circle" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</div>

