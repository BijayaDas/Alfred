
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Financials list</h4>
        <h6 class="card-subtitle"></h6>
        <%= link_to 'New Automated Task', new_financial_path, class: "btn btn-primary btn-rounded m-t-10 float-right" %>

        <div class="table-responsive">
          <table id="demo-foo-addrow" class="table table-bordered m-t-30 table-hover contact-list table-bordered toggle-arrow-tiny" data-paging="true" data-paging-size="7" data-toggle-column="first">
            <thead>
              <tr>
                <th>Header</th>
      <th>Content</th>
      <th>Tag</th>
      <th>Finance type</th>
      <th>Status</th>
      <th>Annual growth perventage</th>
      <th>Transaction date</th>
      <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @financials.each do |financial| %>
                <tr>
                  <td><%= financial.header %></td>
        <td><%= financial.content %></td>
        <td><%= financial.tag %></td>
        <td><%= financial.finance_type %></td>
        <td><%= financial.status %></td>
        <td><%= financial.annual_growth_perventage %></td>
        <td><%= financial.transaction_date %></td>
                  <td>
                    <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_financial_path(financial), class: "btn btn-info btn-circle" %> 
                    <%= link_to '<i class="fa fa-trash"></i>'.html_safe, financial, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-circle" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</div>


